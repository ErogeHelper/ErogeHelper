<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <system:Double x:Key="MinWindowWidth">400</system:Double>
    <system:Double x:Key="ControllerWidth">240</system:Double>
    <system:Double x:Key="MinButtonWidth">90</system:Double>
    <system:Double x:Key="ExpandedModeThresholdWidth">500</system:Double>
    <system:Double x:Key="SidePaneLength">160</system:Double>
    <system:Double x:Key="ColumnInfoThresholdWidth">850</system:Double>
    <system:Double x:Key="MinimalOpacity">0.002</system:Double>

    <SolidColorBrush x:Key="AssistiveTouchMenuItemPressed" Color="#77C4F1" />
    <SolidColorBrush x:Key="AssistiveTouchMenuItemForgroundColor" Color="#FFFFFF" />

    <!--  AssistiveTouch Basic  -->
    <SolidColorBrush x:Key="AssistiveTouchBackground" Color="#262626" />
    <SolidColorBrush x:Key="AssistiveTouchLayerOneLine" Color="#232323" />
    <SolidColorBrush x:Key="AssistiveTouchLayerOneBackground" Color="#505050" />
    <SolidColorBrush x:Key="AssistiveTouchLayerTwoLine" Color="#434343" />
    <SolidColorBrush x:Key="AssistiveTouchLayerTwoBackground" Color="#939393" />
    <SolidColorBrush x:Key="AssistiveTouchLayerThreeLine" Color="#686868" />
    <SolidColorBrush x:Key="AssistiveTouchLayerThreeBackground" Color="#FFFFFF" />
    <CornerRadius
        x:Key="Circle"
        BottomLeft="360" BottomRight="360" TopLeft="360" TopRight="360" />

    <!--  AssistiveTouch Normal Style  -->
    <system:Double x:Key="AssistiveTouchSize">60</system:Double>
    <CornerRadius
        x:Key="AssistiveTouchLayerZeroCornerRadius"
        BottomLeft="13.75" BottomRight="13.75" TopLeft="13.75" TopRight="13.75" />
    <Thickness x:Key="AssistiveTouchCircleLinear">1.5</Thickness>
    <Thickness x:Key="AssistiveTouchLayerOneMargin">6.875</Thickness>
    <Thickness x:Key="AssistiveTouchLayerTwoMargin">10.3125</Thickness>
    <Thickness x:Key="AssistiveTouchLayerThreeMargin">13.75</Thickness>
    <ControlTemplate x:Key="NormalAssistiveTouchTemplate">
        <Border
            Width="{StaticResource AssistiveTouchSize}"
            Height="{StaticResource AssistiveTouchSize}"
            Background="{StaticResource AssistiveTouchBackground}"
            CornerRadius="{StaticResource AssistiveTouchLayerZeroCornerRadius}">
            <Grid>
                <Border
                    Margin="{StaticResource AssistiveTouchLayerOneMargin}"
                    Background="{StaticResource AssistiveTouchLayerOneBackground}"
                    BorderBrush="{StaticResource AssistiveTouchLayerOneLine}"
                    BorderThickness="{StaticResource AssistiveTouchCircleLinear}"
                    CornerRadius="{StaticResource Circle}" />
                <Border
                    Margin="{StaticResource AssistiveTouchLayerTwoMargin}"
                    Background="{StaticResource AssistiveTouchLayerTwoBackground}"
                    BorderBrush="{StaticResource AssistiveTouchLayerTwoLine}"
                    BorderThickness="{StaticResource AssistiveTouchCircleLinear}"
                    CornerRadius="{StaticResource Circle}" />
                <Border
                    Margin="{StaticResource AssistiveTouchLayerThreeMargin}"
                    Background="{StaticResource AssistiveTouchLayerThreeBackground}"
                    BorderBrush="{StaticResource AssistiveTouchLayerThreeLine}"
                    BorderThickness="{StaticResource AssistiveTouchCircleLinear}"
                    CornerRadius="{StaticResource Circle}" />
            </Grid>
        </Border>
    </ControlTemplate>

    <!--  AssistiveTouch Big Style  -->
    <system:Double x:Key="BigAssistiveTouchSize">100</system:Double>
    <CornerRadius
        x:Key="BigAssistiveTouchLayerZeroCornerRadius"
        BottomLeft="25" BottomRight="25" TopLeft="25" TopRight="25" />
    <Thickness x:Key="BigAssistiveTouchCircleLinear">2</Thickness>
    <Thickness x:Key="BigAssistiveTouchLayerOneMargin">12.5</Thickness>
    <Thickness x:Key="BigAssistiveTouchLayerTwoMargin">18.75</Thickness>
    <Thickness x:Key="BigAssistiveTouchLayerThreeMargin">25</Thickness>
    <ControlTemplate x:Key="BigAssistiveTouchTemplate">
        <Border
            Width="{StaticResource BigAssistiveTouchSize}"
            Height="{StaticResource BigAssistiveTouchSize}"
            Background="{StaticResource AssistiveTouchBackground}"
            CornerRadius="{StaticResource BigAssistiveTouchLayerZeroCornerRadius}">
            <Grid>
                <Border
                    Margin="{StaticResource BigAssistiveTouchLayerOneMargin}"
                    Background="{StaticResource AssistiveTouchLayerOneBackground}"
                    BorderBrush="{StaticResource AssistiveTouchLayerOneLine}"
                    BorderThickness="{StaticResource BigAssistiveTouchCircleLinear}"
                    CornerRadius="{StaticResource Circle}" />
                <Border
                    Margin="{StaticResource BigAssistiveTouchLayerTwoMargin}"
                    Background="{StaticResource AssistiveTouchLayerTwoBackground}"
                    BorderBrush="{StaticResource AssistiveTouchLayerTwoLine}"
                    BorderThickness="{StaticResource BigAssistiveTouchCircleLinear}"
                    CornerRadius="{StaticResource Circle}" />
                <Border
                    Margin="{StaticResource BigAssistiveTouchLayerThreeMargin}"
                    Background="{StaticResource AssistiveTouchLayerThreeBackground}"
                    BorderBrush="{StaticResource AssistiveTouchLayerThreeLine}"
                    BorderThickness="{StaticResource BigAssistiveTouchCircleLinear}"
                    CornerRadius="{StaticResource Circle}" />
            </Grid>
        </Border>
    </ControlTemplate>
</ResourceDictionary>
