<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows10.0.19041.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <OutputPath>..\bin\$(Configuration)</OutputPath>
    <AppendTargetFrameworkToOutputPath>False</AppendTargetFrameworkToOutputPath>
    <ApplicationManifest>assets\app.manifest</ApplicationManifest>
    <Version>0.0.6</Version>
    <Authors>k1mlka</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Caliburn.Micro" Version="4.0.136-rc" />
    <PackageReference Include="Dapper" Version="2.0.78" />
    <PackageReference Include="FluentMigrator" Version="3.2.15" />
    <PackageReference Include="FluentMigrator.Runner" Version="3.2.15" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="5.0.4" />
    <PackageReference Include="ModernWpf.MessageBox" Version="0.5.1" />
    <PackageReference Include="Refit" Version="6.0.38" />
    <PackageReference Include="Serilog.Sinks.Debug" Version="2.0.0" />
    <PackageReference Include="WindowsInput" Version="6.2.1" />
  </ItemGroup>

  <!-- No content directories -->
  <ItemGroup>
    <Folder Include="assets\site_icon\" />
    <Folder Include="Common\Messenger\" />
    <Folder Include="Model\Repository\Entity\Payload\" />
    <Folder Include="Model\Repository\Translator\" />
    <Folder Include="Model\Repository\Dictionary\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ErogeHelper.Language\ErogeHelper.Language.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="libs\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Remove="assets\app.ico" />
    <None Remove="assets\text_background\aqua_green.png" />
    <None Remove="assets\text_background\green.png" />
    <None Remove="assets\text_background\pink.png" />
    <None Remove="assets\text_background\transparent.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="assets\app.ico" />
    <Resource Include="assets\text_background\aqua_green.png" />
    <Resource Include="assets\text_background\green.png" />
    <Resource Include="assets\text_background\pink.png" />
    <Resource Include="assets\text_background\transparent.png" />
  </ItemGroup>

</Project>
