<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows10.0.19041.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <OutputPath>..\bin\$(Configuration)</OutputPath>
    <AppendTargetFrameworkToOutputPath>False</AppendTargetFrameworkToOutputPath>
    <ApplicationManifest>assets\app.manifest</ApplicationManifest>
    <Version>0.0.6</Version>
    <Authors>k1mlka</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Caliburn.Micro" Version="4.0.136-rc" />
    <PackageReference Include="ModernWpfUI" Version="0.9.3" />
    <PackageReference Include="Refit" Version="6.0.38" />
    <PackageReference Include="Serilog.Sinks.Debug" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Assets_tmp\site_icon\" />
    <Folder Include="Assets_tmp\text_background\" />
    <Folder Include="Common\Converter\" />
    <Folder Include="Common\Messenger\" />
    <Folder Include="Model\Repository\Translator\" />
    <Folder Include="Model\Repository\Dictionary\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ErogeHelper.Language\ErogeHelper.Language.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="libs\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets_tmp\app.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets_tmp\app.ico" />
  </ItemGroup>

</Project>
