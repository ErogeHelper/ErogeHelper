<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows10.0.19041.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <OutputPath>..\bin\$(Configuration)</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <ApplicationManifest>assets\app.manifest</ApplicationManifest>
    <Version>0.0.9.1</Version>
    <Authors>k1mlka</Authors>
    <MeCabUseDefaultDictionary>false</MeCabUseDefaultDictionary>
    <!-- Bugs of R2R: https://github.com/dotnet/wpf/issues/5316 -->
    <PublishReadyToRun>true</PublishReadyToRun>
    <Platforms>AnyCPU;x86</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.WinUI.Notifications" Version="7.0.3" />
    <PackageReference Include="Config.Net.Json" Version="4.15.0" />
    <PackageReference Include="Dapper.Contrib" Version="2.0.78" />
    <PackageReference Include="FluentMigrator.Runner" Version="3.3.0" />
    <PackageReference Include="HMBSbige.UpdateChecker" Version="5.0.1" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="5.0.9" />
    <PackageReference Include="ModernWpf.MessageBox" Version="0.5.1" />
    <PackageReference Include="NullGuard.Fody" Version="3.0.0" />
    <PackageReference Include="Ookii.Dialogs.Wpf" Version="4.0.0" />
    <PackageReference Include="ReactiveMarbles.ObservableEvents.SourceGenerator" Version="1.1.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ReactiveUI.Fody" Version="16.2.1" />
    <PackageReference Include="ReactiveUI.WPF" Version="16.2.1" />
    <PackageReference Include="ToastNotifications.Messages.Net5" Version="3.0.1" />
    <PackageReference Include="Vanara.PInvoke.NetListMgr" Version="3.3.12" />
    <PackageReference Include="Vanara.PInvoke.User32" Version="3.3.12" />
    <!-- Annoying ".nuget" files in solution explorer: https://github.com/NuGet/Home/issues/4856 -->
    <PackageReference Include="WindowsInput" Version="6.3.0" />
    <PackageReference Include="WpfScreenHelper" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ErogeHelper.Language\ErogeHelper.Language.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="libs\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="assets\app.ico" />
    <Resource Include="assets\app.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Common\Comparers\" />
    <Folder Include="Model\DTO\Entity\Payloads\" />
    <Folder Include="Model\DTO\Entity\Responses\" />
    <Folder Include="Model\DataModels\" />
    <Folder Include="ViewModel\Components\" />
  </ItemGroup>

  <Target Name="TextHostX64-Publish" Condition="'$(RuntimeIdentifier)' == 'win-x64'" AfterTargets="Publish">
    <Delete Files="$(PublishDir)libs\texthost_x86.dll" />
  </Target>

  <Target Name="TextHostX86" Condition="'$(Platform)' == 'x86'" AfterTargets="Build">
    <Copy SourceFiles="$(OutDir)libs\texthost_x86.dll" DestinationFiles="$(OutDir)libs\texthost.dll" />
    <Delete Files="$(OutDir)libs\texthost_x86.dll" /> 
  </Target>
  <Target Name="TextHostX86-Publish" Condition="'$(RuntimeIdentifier)' == 'win-x86'" AfterTargets="Publish">
    <Copy SourceFiles="$(PublishDir)libs\texthost_x86.dll" DestinationFiles="$(PublishDir)libs\texthost.dll" />
    <Delete Files="$(PublishDir)libs\texthost_x86.dll" /> 
  </Target>
  <ProjectExtensions><VisualStudio><UserProperties properties_4launchsettings_1json__JsonSchema="" /></VisualStudio></ProjectExtensions>
</Project>
