<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows10.0.18362</TargetFramework>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationManifest>assets\app.manifest</ApplicationManifest>
  </PropertyGroup>

  <PropertyGroup>
    <PublishSingleFile>false</PublishSingleFile>
    <PublishReadyToRun>false</PublishReadyToRun>
    <PublishAot>false</PublishAot>
    <OutputPath>..\bin\$(Configuration)</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>k1mlka</Authors>
    <Version>0.0.10.0</Version>
  </PropertyGroup>
    
  <!--  Avoid Generate Static Main in App.g.i.cs  -->
  <ItemGroup>
    <ApplicationDefinition Remove="App.xaml" />
    <Page Include="App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Config.Net.Json" Version="4.19.0" />
    <PackageReference Include="Refit.Xml" Version="6.3.2" />
    <PackageReference Include="ModernWpf.K1mlka" Version="0.0.4" />
    <!--  Ookii dailogs add reference to winforms  -->
    <PackageReference Include="Ookii.Dialogs.Wpf" Version="5.0.1" />
    <PackageReference Include="ReactiveMarbles.ObservableEvents.SourceGenerator" Version="1.2.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ReactiveUI.WPF" Version="18.3.1" />
    <PackageReference Include="ReactiveUI.Fody" Version="18.3.1" />
    <PackageReference Include="ReactiveUI.Validation" Version="3.0.1" />
    <PackageReference Include="securifybv.ShellLink" Version="0.1.0" />
    <PackageReference Include="SharpClipboard" Version="3.5.2" />
    <PackageReference Include="Splat.Drawing" Version="14.4.1" />
    <PackageReference Include="Vanara.PInvoke.Gdi32" Version="3.4.8" />
    <PackageReference Include="Vanara.PInvoke.User32" Version="3.4.8" />
    <PackageReference Include="WpfScreenHelper" Version="2.1.0" />
    <PackageReference Include="WindowsInput" Version="6.4.0" />
  </ItemGroup>
    
  <ItemGroup>
    <Content Include="libs\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
    
  <ItemGroup>
    <!--  Splash screen  -->
    <EmbeddedResource Include="assets\klee.png" />
    <!--  Window title icon  -->
    <Resource Include="assets\app.ico" />
    <!--  About page image  -->
    <Resource Include="assets\app.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Common\Languages\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
    <EmbeddedResource Update="Common\Languages\Strings.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Common\Languages\Strings.zh-CN.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Common\Languages\Strings.ja-JP.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
    </EmbeddedResource>
  </ItemGroup>

</Project>
