<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows10.0.19041.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <OutputPath>..\bin\$(Configuration)</OutputPath>
    <AppendTargetFrameworkToOutputPath>False</AppendTargetFrameworkToOutputPath>
    <ApplicationManifest>assets\app.manifest</ApplicationManifest>
    <Version>0.0.9</Version>
    <Authors>k1mlka</Authors>
    <MeCabUseDefaultDictionary>False</MeCabUseDefaultDictionary>
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishReadyToRunUseCrossgen2>true</PublishReadyToRunUseCrossgen2>
    <Platforms>AnyCPU;x86</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.WinUI.Notifications" Version="7.0.3" />
    <PackageReference Include="ModernWpf.MessageBox" Version="0.5.1" />
    <PackageReference Include="Ookii.Dialogs.Wpf" Version="3.1.0" />
    <PackageReference Include="ReactiveUI.Events.WPF" Version="14.2.1" />
    <PackageReference Include="ReactiveUI.Fody" Version="14.2.1" />
    <PackageReference Include="ReactiveUI.WPF" Version="14.2.1" />
    <PackageReference Include="ToastNotifications.Messages.Net5" Version="3.0.1" />
    <PackageReference Include="Vanara.PInvoke.Shell32" Version="3.3.11" />
    <PackageReference Include="Vanara.PInvoke.User32" Version="3.3.11" />
    <PackageReference Include="WpfScreenHelper" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ErogeHelper.Language\ErogeHelper.Language.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="libs\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="assets\app.ico" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Common\Comparers\" />
    <Folder Include="Common\Enums\" />
    <Folder Include="Common\Extensions\" />
    <Folder Include="Model\DAL\Entity\Tables\" />
    <Folder Include="Model\DAL\Entity\Payloads\" />
    <Folder Include="Model\DAL\Entity\Responses\" />
    <Folder Include="Model\DAL\Migration\" />
    <Folder Include="Model\Repositories\" />
    <Folder Include="ViewModel\Components\" />
  </ItemGroup>

  <Target Name="TextHostX64-Publish" Condition="'$(RuntimeIdentifier)' == 'win-x64'" AfterTargets="Publish">
    <Delete Files="$(PublishDir)libs\texthost_x86.dll" />
  </Target>

  <Target Name="TextHostX86" Condition="'$(Platform)' == 'x86'" AfterTargets="Build">
    <Copy SourceFiles="$(OutDir)libs\texthost_x86.dll" DestinationFiles="$(OutDir)libs\texthost.dll" />
    <Delete Files="$(OutDir)libs\texthost_x86.dll" /> 
  </Target>
  <Target Name="TextHostX86-Publish" Condition="'$(RuntimeIdentifier)' == 'win-x86'" AfterTargets="Publish">
    <Copy SourceFiles="$(PublishDir)libs\texthost_x86.dll" DestinationFiles="$(PublishDir)libs\texthost.dll" />
    <Delete Files="$(PublishDir)libs\texthost_x86.dll" /> 
  </Target>
</Project>
