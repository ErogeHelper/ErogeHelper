<Application
    x:Class="ErogeHelper.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:converter="clr-namespace:ErogeHelper.Platform.XamlTool.Converters"
    ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <ResourceDictionary Source="pack://application:,,,/ToastNotifications.Messages;component/Themes/Default.xaml" />
                <ResourceDictionary Source="Properties/UIValueDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converter:IsLessThanConverter x:Key="IsLessThanConverter" />
            <converter:TextEvaluateConverter x:Key="TextEvaluateConverter" />
            <converter:FontSizeHalfConverter x:Key="FontSizeHalfConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
