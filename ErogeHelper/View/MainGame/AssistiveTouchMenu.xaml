<Border x:Name="MenuBase"
    x:Class="ErogeHelper.View.MainGame.AssistiveTouchMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:maingame="clr-namespace:ErogeHelper.View.MainGame"
    mc:Ignorable="d"
    Width="300" Height="300"
    MaxWidth="300" MaxHeight="300"
    Padding="12"
    Background="{StaticResource AssistiveTouchBackground}"
    CornerRadius="25,25,25,25">

    <!--  Switchable Page  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0" Grid.Column="1"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            FontSize="64" Foreground="White" Text="2" />
        <TextBlock
            Grid.Row="1" Grid.Column="0"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            FontSize="64" Foreground="White" Text="4" />

        <maingame:MenuItemControl
            Grid.Row="1" Grid.Column="2"
            Symbol="Setting" Text="偏好设置" />

        <maingame:MenuItemControl
            Grid.Row="2" Grid.Column="1"
            Symbol="Back" Text="返回" />
    </Grid>
</Border>
