<Border x:Name="MenuBase"
    x:Class="ErogeHelper.View.MainGame.AssistiveTouchMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="300" Height="300"
    MaxWidth="300" MaxHeight="300"
    Padding="12"
    d:Visibility="Visible"
    Background="{StaticResource AssistiveTouchBackground}"
    CornerRadius="25,25,25,25" Stylus.IsPressAndHoldEnabled="False"
    Stylus.IsTapFeedbackEnabled="False" Visibility="Collapsed">

    <Grid>
        <Frame x:Name="MenuContent"
            Navigating="MenuContentOnNavigating" NavigationUIVisibility="Hidden"
            Source="MenuMainPage.xaml" />

        <Frame x:Name="MenuSecondLayer" NavigationUIVisibility="Hidden" />

        <UserControl x:Name="FackWhitePoint"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Template="{StaticResource NormalAssistiveTouchTemplate}" />
    </Grid>

</Border>
