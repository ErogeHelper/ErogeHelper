<Border x:Name="MenuBase"
    x:Class="ErogeHelper.View.MainGame.AssistiveTouchMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MaxWidth="300" MaxHeight="300"
    Padding="12"
    d:Height="300" d:Visibility="Visible" d:Width="300"
    Background="{StaticResource AssistiveTouchBackground}"
    CornerRadius="25,25,25,25" Stylus.IsPressAndHoldEnabled="False"
    Stylus.IsTapFeedbackEnabled="False" Visibility="Collapsed">

    <Grid>
        <Grid x:Name="FrameBase">
            <Frame x:Name="MainMenu" NavigationUIVisibility="Hidden" />
            <Frame x:Name="DeviceMenu" NavigationUIVisibility="Hidden" />
        </Grid>
        <UserControl x:Name="FakeWhitePoint"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Template="{StaticResource NormalAssistiveTouchTemplate}" />
    </Grid>

</Border>
