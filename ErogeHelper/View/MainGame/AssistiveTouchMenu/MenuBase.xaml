<Border
    x:Class="ErogeHelper.View.MainGame.MenuBase"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300" d:MaxHeight="300" d:MaxWidth="300"
    d:Visibility="Visible"
    MaxWidth="{DynamicResource AssistiveTouchMenuMaxSize}"
    MaxHeight="{DynamicResource AssistiveTouchMenuMaxSize}"
    Padding="{StaticResource AssistiveTouchMenuPadding}"
    CornerRadius="25"
    Background="{StaticResource AssistiveTouchBackground}"
    Stylus.IsPressAndHoldEnabled="False" Stylus.IsTapFeedbackEnabled="False"
    Visibility="Collapsed">

    <Grid>
        <Grid x:Name="FrameBase">
            <Frame x:Name="MainMenu" NavigationUIVisibility="Hidden" />
            <Frame x:Name="DeviceMenu" NavigationUIVisibility="Hidden" />
        </Grid>
        <UserControl x:Name="FakeWhitePoint"
            d:Template="{StaticResource NormalAssistiveTouchTemplate}"
            HorizontalAlignment="Right" VerticalAlignment="Bottom"
            Template="{DynamicResource AssistiveTouchStyle}" />
    </Grid>

</Border>
