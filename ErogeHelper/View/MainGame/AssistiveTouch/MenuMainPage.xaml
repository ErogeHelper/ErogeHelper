<Page
    x:Class="ErogeHelper.View.MainGame.MenuMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:maingame="clr-namespace:ErogeHelper.View.MainGame"
    mc:Ignorable="d"
    Title="MenuMainPage"
    d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <maingame:MenuItemControl x:Name="Device"
            Grid.Row="0" Grid.Column="1"
            ClickEvent="DeviceOnClickEvent" SymbolExtend="Tablet" Text="Device" />

        <maingame:MenuItemControl x:Name="Function"
            Grid.Row="1" Grid.Column="2"
            Symbol="Repair" Text="Function" />

        <maingame:MenuItemControl x:Name="Preference"
            Grid.Row="2" Grid.Column="1"
            ClickEvent="PreferenceOnClickEvent" Symbol="Setting" Text="Preference" />
    </Grid>
</Page>
