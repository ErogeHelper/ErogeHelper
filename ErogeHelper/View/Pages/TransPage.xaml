<Page x:Class="ErogeHelper.View.Pages.TransPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErogeHelper.View.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:c="clr-namespace:System.Collections;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransPage">

    <Page.Resources>
        <DataTemplate x:Key="TranslatorListViewTemplate">
            <TextBlock Text="{Binding Name}" Margin="0,5,0,5"/>
        </DataTemplate>
    </Page.Resources>

    <ui:SimpleStackPanel Spacing="10" Margin="20 10">
        <ui:SimpleStackPanel Spacing="10" Orientation="Horizontal">
            <TextBlock Text="Trans" />
            <ComboBox></ComboBox>
            <TextBlock Text="To" />
            <ComboBox></ComboBox>
        </ui:SimpleStackPanel>
        <ui:ListView 
            SelectionMode="Single" ItemTemplate="{StaticResource ResourceKey=TranslatorListViewTemplate}"
            ItemsSource="{Binding TranslatorList}">
            
        </ui:ListView>
    </ui:SimpleStackPanel>
</Page>
