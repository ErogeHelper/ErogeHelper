<Page x:Class="ErogeHelper.View.Pages.GeneralPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErogeHelper.View.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:resx="clr-namespace:ErogeHelper.Language;assembly=ErogeHelper.Language"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="{x:Static resx:Strings.GeneralPage_Title}">

    <ScrollViewer PanningMode="Both">
        <StackPanel Margin="20,10">
            <GroupBox>
                <ui:SimpleStackPanel Spacing="10">
                    <ui:ToggleSwitch 
                        Header="{x:Static resx:Strings.GeneralPage_JapaneseText}" IsOn="{Binding ShowSource}" />
                    <ui:ToggleSwitch 
                        Header="{x:Static resx:Strings.GeneralPage_AppendText}" IsOn="{Binding ShowAppend}" />
                    <ui:ToggleSwitch Header="DeepL Client Extention" IsOn="{Binding DeepLExtention}" />
                    <ui:HyperlinkButton Content="Download DeepL" NavigateUri="https://www.deepl.com/app"/>
                </ui:SimpleStackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Page>
