<Page x:Class="ErogeHelper.View.Pages.MecabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErogeHelper.View.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:resx="clr-namespace:ErogeHelper.Language;assembly=ErogeHelper.Language"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static resx:Strings.MecabPage_Title}">

    <ScrollViewer PanningMode="Both">
        <StackPanel Margin="20,10">
            <GroupBox>
                <ui:SimpleStackPanel Spacing="10">
                    <ui:RadioButtons Header="{x:Static resx:Strings.MecabPage_PositionFormat}">
                        <RadioButton Content="{x:Static resx:Strings.MecabPage_FuriganaTop}" IsChecked="{Binding KanaTop}"></RadioButton>
                        <RadioButton Content="{x:Static resx:Strings.MecabPage_FuriganaBottom}" IsChecked="{Binding KanaBottom}"></RadioButton>
                        <RadioButton IsEnabled="False" Content="{x:Static resx:Strings.MecabPage_TextVertical}"></RadioButton>
                    </ui:RadioButtons>
                    <ui:RadioButtons Header="{x:Static resx:Strings.MecabPage_FuriganaType}">
                        <RadioButton IsEnabled="False" Content="{x:Static resx:Strings.MecabPage_Romaji}"></RadioButton>
                        <RadioButton IsEnabled="False" Content="{x:Static resx:Strings.MecabPage_Hiragana}"></RadioButton>
                        <RadioButton IsEnabled="False" Content="{x:Static resx:Strings.MecabPage_Katakana}"></RadioButton>
                    </ui:RadioButtons>
                </ui:SimpleStackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Page>
