<rxui:ReactiveUserControl
    x:Class="ErogeHelper.View.Preference.DanmakuPage"
    x:TypeArguments="vm:DanmakuViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019" xmlns:rxui="http://reactiveui.net"
    xmlns:component="clr-namespace:ErogeHelper.Platform.XamlTool.Components"
    xmlns:resx="clr-namespace:ErogeHelper.Shared.Languages;assembly=ErogeHelper.Shared"
    xmlns:vm="clr-namespace:ErogeHelper.ViewModel.Preference;assembly=ErogeHelper.ViewModel"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <component:ScrollViewerSmooth PanningMode="Both">
        <ui:SimpleStackPanel Margin="20 10" Spacing="10">
            <ui:ToggleSwitch x:Name="DanmakuSwitch" Header="Danmaku(In Test)" />

            <ui:SimpleStackPanel Spacing="8">
                <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                    <Button Content="Sync" />
                    <Label Margin="10 0 0 0" VerticalAlignment="Center" Content="Last sync time: " />
                    <TextBlock d:Text="yyyy-mm-dd 00/00" x:Name="LastSyncTime" VerticalAlignment="Center" />
                </StackPanel>

                <ListView Margin="0 10 0 0" ItemsSource="{Binding Comments}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding CreationTime}" Header="Creation Time" />
                            <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Text}" Header="Text" />
                            <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Danmaku}" Header="Comment" />
                            <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Username}" Header="Username" />
                        </GridView>
                    </ListView.View>
                </ListView>

