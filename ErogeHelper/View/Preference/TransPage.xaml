<rxui:ReactiveUserControl
    x:Class="ErogeHelper.View.Preference.TransPage"
    x:TypeArguments="vm:TransViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019" xmlns:rxui="http://reactiveui.net"
    xmlns:resx="clr-namespace:ErogeHelper.Shared.Languages;assembly=ErogeHelper.Shared"
    xmlns:vm="clr-namespace:ErogeHelper.ViewModel.Preference;assembly=ErogeHelper.ViewModel"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <ui:SimpleStackPanel Margin="20 10" Spacing="10">
        <TextBlock FontSize="32" Text="{x:Static resx:Strings.Developing}" />

        <TextBlock Margin="0 12 0 0" FontSize="16" Text="{x:Static resx:Strings.TransPage_LearnJapaneseTip}" />
        <ui:HyperlinkButton x:Name="AiueoLink" Content="{x:Static resx:Strings.TransPage_Aiueo}" />
        <ui:HyperlinkButton x:Name="TaeKimGrammerLink" Content="{x:Static resx:Strings.TransPage_TaeKimGrammer}" />
    </ui:SimpleStackPanel>
</rxui:ReactiveUserControl>
