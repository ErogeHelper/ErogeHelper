<rxui:ReactiveUserControl
    x:Class="ErogeHelper.View.Preference.TTSPage"
    x:TypeArguments="vm:TTSViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019" xmlns:rxui="http://reactiveui.net"
    xmlns:resx="clr-namespace:ErogeHelper.Shared.Languages;assembly=ErogeHelper.Shared"
    xmlns:vm="clr-namespace:ErogeHelper.ViewModel.Preference;assembly=ErogeHelper.ViewModel"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <ui:SimpleStackPanel Margin="20 10" Spacing="10">
        <Label Content="Default Voice:" />
        <ComboBox x:Name="SupportVoices" MinWidth="100" DisplayMemberPath="." />
        <TextBlock Text="すもももももももものうち" />
        <Button x:Name="Play" Content="Play" />
        <ui:ToggleSwitch x:Name="AllLanguage" Header="Use other language voice" />
        <GroupBox Header="Microsoft (SAPI/OneCore)">
            <TextBlock Text="Windows 11: Setting - Time and languages - voice" />
        </GroupBox>
        <GroupBox Header="Voiceroid" />
        <GroupBox Header="Online TTS" />
    </ui:SimpleStackPanel>
</rxui:ReactiveUserControl>
