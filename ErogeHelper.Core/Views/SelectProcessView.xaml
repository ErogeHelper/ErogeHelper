<Window x:Class="ErogeHelper.Core.Views.SelectProcessView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErogeHelper.Core.Views"
        xmlns:resx="clr-namespace:EHLanguage;assembly=EHLanguage"
        xmlns:control="clr-namespace:ErogeHelper.Core.Views.Control"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="{x:Static resx:Strings.SelectProcess_Title}" Height="450" Width="800" MinWidth="350">
    <control:ScrollViewerEx>
        <ui:SimpleStackPanel Margin="12" Spacing="24">
            <TextBlock Text="{x:Static resx:Strings.SelectProcess_Tips}" 
                       Style="{StaticResource HeaderTextBlockStyle}" />
            <Button x:Name="AButton"
                    Content="I am a button" />
            <Button Content="{x:Static resx:Strings.SelectProcess_InjectButton}" Style="{StaticResource AccentButtonStyle}" />
        </ui:SimpleStackPanel>
    </control:ScrollViewerEx>
</Window>
